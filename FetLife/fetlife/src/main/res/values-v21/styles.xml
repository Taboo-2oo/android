<resources>>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="actionBarTheme">@style/AppTheme.ActionBarTheme</item>
        <item name="colorControlNormal">@color/text_color_primary</item>
        <item name="android:actionOverflowButtonStyle">@style/AppTheme.NoActionBar.OverFlow</item>
        <item name="android:itemBackground">@color/background_menu_options</item>
        <item name="android:actionMenuTextColor">@color/text_color_secondary_dark</item>
        <item name="android:itemTextAppearance">@style/myCustomMenuTextAppearance</item>
<!--        <item name="android:homeAsUpIndicator">@drawable/ic_keyboard_arrow_left_white_24dp</item>-->
    </style>

    <style name="myCustomMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/text_color_secondary_dark</item>
    </style>

    <style name="AppTheme.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/text_color_primary</item>
    </style>

    <style name="AppTheme.NoActionBar.OverFlow" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/text_color_primary</item>
    </style>

</resources>
